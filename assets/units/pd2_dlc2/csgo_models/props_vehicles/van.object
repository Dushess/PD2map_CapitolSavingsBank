<?xml version="1.0" ?>
<dynamic_object>
    <diesel materials="units/pd2_dlc2/csgo_models/props_vehicles/van" orientation_object="rp_van" />
    <sequence_manager file="units/pd2_dlc2/csgo_models/props_vehicles/van"/>
	
	<animations>
		<animation_group name="trunk" enabled="false">
				<object name="a_door" />
		</animation_group>
	</animations>
	
    <bodies>
        <body name="static_body" template="static" enabled="true" >
            <object name="rp_van"/>
            <object name="c_convex_1" collision_type="convex" padding="-2.5"/>
            <object name="c_convex_2" collision_type="convex" padding="-2.5"/>
            <object name="c_convex_3" collision_type="convex" padding="-2.5"/>
            <object name="c_convex_4" collision_type="convex" padding="-2.5"/>
            <object name="c_mesh_mopp_1" collision_type="mesh_mopp" />
        </body>
		
		<body name="body_trunk" enabled="true" template="animated">
			<object name="a_door" />
			<object name="c_door" collision_type="mesh_mopp" />
		</body>	

        <body name="body_blocker_mover" enabled="true" template="mover_blocker">
            <object name="rp_van" />
            <object name="c_convex_mover_blocker" collision_type="convex" />
        </body> 
    </bodies>
    
    <decal_surfaces default_material="metal" static="true">
        <decal_mesh name="g_van_glass" material="metal" enabled="true"/>
        <decal_mesh name="dm_rubber" material="rubber" enabled="true"/>
        <decal_mesh name="dm_metal" material="sheet_metal" enabled="true"/>
        <decal_mesh name="dm_door" material="sheet_metal" enabled="true"/>
    </decal_surfaces> 
    
    <graphics>
        <object enabled="true" name="g_van_glass" shadow_caster="true"/>
        <object enabled="true" name="g_van" shadow_caster="true"/>
        <object enabled="true" name="g_door" shadow_caster="true"/>
        <object enabled="true" name="g_door_glass" shadow_caster="true"/>
    </graphics>
</dynamic_object> 